<section class="postslist">
	{% for post in postslist | reverse %}
        {% if loop.index <= 4 %}
            <article{% if post.url == url %} data-current="current item"{% endif %}>
                <a href="{{ post.url | url }}">
                    <img src="/static/img/{{ post.data.featured_image }}">
                </a>
                <div class="postslist__copy">
                    <h4>   
                     <a href="{{ post.url | url }}">
                            {% if post.data.title %}
                                {{ post.data.title }}
                            {% else %}
                                Untitled
                            {% endif %}
                        </a>
                    </h4>
                {% if post.data.summary %}
                    <p>
                        {{ post.data.summary }}
                    </p>
                {% endif %}
                {% if post.data.tags %}
                    <p>
                        {% for tag in post.data.tags %}
                        {%- if tag != "post" -%}
                            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
                        {%- endif -%}
                        {% endfor %}
                    </p>
                {% endif %}
                </div>
            </article>
        {% endif %}
	{% endfor %}
</section>
